<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:paddingBottom="16dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/history_rl_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#91d0f9">

        <ImageView
            android:id="@+id/history_header"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/coporation1" />

        <TextView
            android:id="@+id/history_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/history_header"
            android:text="1231231231"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/history_delte"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#94c5e5"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/delete" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/history_ll_time"
        android:layout_below="@+id/history_rl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="        时间:"
            android:textColor="#5b5b5b"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2013-10-01 11:10"
            android:layout_marginLeft="8dp"
            android:textColor="#5b5b5b"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/history_ll_gaddress"
        android:layout_below="@+id/history_ll_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取件地址:"
            android:textColor="#5b5b5b"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/history_gaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx小区xx号柜"
            android:layout_marginLeft="8dp"
            android:textColor="#5b5b5b"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/history_ll_paddress"
        android:layout_below="@+id/history_ll_gaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投放地址:"
            android:textColor="#5b5b5b"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/history_paddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="xx小区xx号柜子"
            android:textColor="#5b5b5b"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/history_ll_comment"
        android:layout_below="@+id/history_ll_paddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="        评价:"
            android:textColor="#5b5b5b"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/history_coment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="满意"
            android:textColor="#f85351"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>