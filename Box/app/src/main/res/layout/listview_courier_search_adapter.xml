<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="horizontal"
        android:background="@color/backgroud">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="12dp"
                    android:src="@drawable/courier_me_head" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/list_courier_jjr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="胡晓利13368384763"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/list_courier_add_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="寄件地址：重庆邮电大学20栋楼下5号柜"
                        android:textSize="10sp"
                        android:layout_marginBottom="4dp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/list_courier_add_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="目的地址：重庆邮电大学10栋"
                        android:textSize="10sp"
                        android:layout_marginBottom="4dp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/list_courier_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*付款类型：到付"
                        android:textSize="10sp"
                        android:layout_marginBottom="4dp"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:padding="12dp">

                <TextView
                    android:id="@+id/list_courier_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00" />

                <TextView
                    android:id="@+id/list_courier_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="18sp"
                    android:text="已取" />
            </FrameLayout>
        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="98dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/courier_search_list_delete_background">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:layout_gravity="left"
                android:src="@drawable/courier_search_list_delete_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="填写反馈"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>