<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recyclerView_title"
        android:layout_margin="4dp"
        android:clickable="false"
        android:background="@color/backgroud"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:textSize="13sp"
        android:textColor="#6c6c6c"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/recyclerview_bg"
        android:layout_height="88dp">

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/recyclerView_header"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@id/ll_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recyclerView_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/recyclerView_phone"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/recyclerView_twoline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#6c6c6c" />

            <TextView
                android:id="@+id/recyclerView_threeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#6c6c6c" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp">

            <TextView
                android:id="@+id/recyclerview_pinglun"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:padding="4dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:textColor="@color/actionbarColor"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/recyclerview_comein"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/come_right"
                android:layout_width="16dp"
                android:layout_height="16dp" />
        </RelativeLayout>
    </RelativeLayout>

    <!--<View-->
        <!--android:layout_marginLeft="8dp"-->
        <!--android:layout_marginRight="8dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:background="#dddddd" />-->
</LinearLayout>
