<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.box.box.customer.exress.functionfragment.query.ExpressInformationActivity">

    <!--货物信息-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/express_information_backgrounf"
        android:orientation="vertical"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/express_info_tv_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="顺丰" />

            <TextView
                android:id="@+id/express_info_tv_sta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_gravity="right"
                android:text="未取件" />
        </FrameLayout>

        <TextView
            android:id="@+id/express_info_tv_courier"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快递员 12345678900"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/express_info_tv_address"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址 重庆市渝北区XX小区XX栋XX柜5号"
            android:textColor="@android:color/black" />
    </FrameLayout>

    <!--分割线-->
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="?android:attr/listDivider" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/express_info_rv_timeline"
        android:scrollbars="vertical"
        android:layout_marginLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
