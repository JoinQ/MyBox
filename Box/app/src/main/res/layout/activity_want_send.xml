<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.box.box.customer.exress.functionfragment.sendme.WantSendActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/wantsend_jjr"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/wantsend_sendname_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:maxLength="10"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/color_cursor" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:background="@color/my_info_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/wantsend_sjr"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/wantsend_getname_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:maxLength="10"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/color_cursor" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:background="@color/my_info_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/wantsend_sendphone"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/wantsend_sendphone_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:inputType="number"
                    android:maxLength="20"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/color_cursor" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:background="@color/my_info_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/wantsend_getphone"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/wantsend_getphone_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:inputType="number"
                    android:maxLength="20"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/color_cursor" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:background="@color/my_info_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/wantsend_sendaddress"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/wantsend_sendaddress_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/color_cursor" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:background="@color/my_info_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/wantsend_getaddress"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/wantsend_getaddress_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/color_cursor" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:background="@color/my_info_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="备注："
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/wantsend_comment_edt"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/want_send_remarks"
                    android:cursorVisible="true"
                    android:gravity="top"
                    android:maxLength="15"
                    android:padding="4dp"
                    android:textColor="@android:color/black"
                    android:textCursorDrawable="@drawable/color_cursor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/15"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/wantsend_submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/want_send_button_shape"
                    android:text="提交" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
