<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:padding="12dp"
        android:background="@drawable/courier_me_backgroung">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal|center_vertical">

                <ImageView
                    android:id="@+id/courier_me_iv_head"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/courier_me_head" />

                <RelativeLayout
                    android:layout_width="32dp"
                    android:layout_height="16dp"
                    android:layout_below="@+id/me_name"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:id="@+id/me_lv_img"
                        android:layout_width="32dp"
                        android:layout_height="16dp"
                        android:src="@drawable/me_lev_bg" />

                    <TextView
                        android:id="@+id/courier_me_tv_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:paddingRight="8dp"
                        android:text="L1"
                        android:textColor="@android:color/white"
                        android:textSize="8sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/courier_me_tv_express"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="顺丰123456" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="可用鲜币:" />

                <TextView
                    android:id="@+id/courier_me_tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="1000" />
            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            >

            <FrameLayout
                android:id="@+id/courier_me_fl_grzl"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/courier_me_grzl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:text="个人资料" />
                </LinearLayout>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/come_right" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/courier_me_fl_phb"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/courier_me_phb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:text="好评排行榜" />
                </LinearLayout>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/come_right" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/courier_me_fl_wdfl"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/courier_me_wdfl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:text="我的福利" />
                </LinearLayout>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/come_right" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/courier_me_fl_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/courier_me_setting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:text="设置" />
                </LinearLayout>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/come_right" />
            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>